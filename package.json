{
  "name": "jiva-core",
  "version": "0.3.3",
  "description": "Versatile autonomous AI agent with three-agent architecture (Manager, Worker, Client) powered by gpt-oss-120b. Adaptive validation, full MCP support, and intelligent quality control.",
  "main": "dist/index.js",
  "bin": {
    "jiva": "dist/interfaces/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "test:web": "playwright test",

    "build": "tsc",
    "dev": "tsx src/interfaces/cli/index.ts",
    "dev:http": "tsx src/interfaces/http/index.ts",
    "start": "node --loader ts-node/esm src/interfaces/cli/index.ts",
    "serve": "node dist/interfaces/http/index.js",
    "type-check": "tsc --noEmit",
    "fix-filesystem": "node fix-filesystem-config.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "agent",
    "autonomous",
    "mcp",
    "model-context-protocol",
    "gpt-oss",
    "gpt-oss-120b",
    "cli",
    "chatbot",
    "assistant",
    "automation",
    "llm",
    "krutrim",
    "harmony",
    "conversation",
    "tool-calling"
  ],
  "author": "Abi Chatterjee <abi@karmaloop.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KarmaloopAI/Jiva.git"
  },
  "bugs": {
    "url": "https://github.com/KarmaloopAI/Jiva/issues"
  },
  "homepage": "https://github.com/KarmaloopAI/Jiva#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@modelcontextprotocol/server-filesystem": "^2025.11.25",
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "express": "^4.18.2",
    "inquirer": "^12.0.1",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "ora": "^8.1.1",
    "unzipper": "^0.12.3",
    "ws": "^8.16.0",
    "yaml": "^2.6.1",
    "zod": "^3.24.1",
    "@google-cloud/storage": "^7.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "@types/archiver": "^6.0.2",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^22.10.2",
    "@types/unzipper": "^0.10.10",
    "@types/ws": "^8.5.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "firebase-admin": "^12.0.0"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "glob": "^13.0.0",
    "tr46": "^3.0.0"
  }
}
